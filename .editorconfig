# EditorConfig - Garante encoding e formatacao consistentes
# https://editorconfig.org

root = true

# Configuracao para TODOS os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos de codigo (Python, JavaScript, TypeScript, etc)
[*.{py,js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

# Python usa 4 espacos (PEP 8)
[*.py]
indent_size = 4

# Markdown permite trailing whitespace (necessario para quebras de linha)
[*.md]
trim_trailing_whitespace = false

# Makefiles requerem tabs
[Makefile]
indent_style = tab
